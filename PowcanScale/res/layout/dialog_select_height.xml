<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_margin"
        android:text="请选择身高"
        android:textColor="@color/black"
        android:textSize="@dimen/title" />
    
    <View android:layout_width="match_parent"
        android:layout_height="@dimen/height_line"
        android:background="@color/gray"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginRight="@dimen/activity_margin"
        android:layout_marginBottom="@dimen/activity_margin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_margin"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/tv_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:drawablePadding="@dimen/space"
            android:layout_margin="@dimen/activity_margin"
            android:text=""
            android:drawableBottom="@drawable/icon_male"
            android:textColor="@color/black"
            android:textSize="@dimen/title" />

        <ListView
            android:id="@+id/list_height"
            android:layout_width="100dp"
            android:layout_height="300dp"
            android:background="@drawable/sel_height_bg"
            android:scrollbars="none" />
    </LinearLayout>
    
    <Button
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_margin"
        android:background="@drawable/bg_red_rectangle"
        android:text="确定"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/login_btn" />

</LinearLayout>